<h1>Signup</h1>


<%= form_for :user, url: '/users' do |f| %>
  <div class="form-group inputForm" >
    <label for = "first_name" >First Name: </label>
    <%= f.text_field :first_name , class: "form-control input" %>
  </div>
  <div class="form-group">
    <label for = "last_name" > Last Name: </label>  
    <%= f.text_field :last_name, class: "form-control input" %>
  </div>
  <div class="form-group">
    <label for = "email"> Email: </label>
    <%= f.text_field :email, class: "form-control input" %>
  </div>
  <div class="form-group">
    <label for = "password"> Password: </label>
    <%= f.password_field :password, class: "form-control input" %>
  </div>
  <div class="form-group">
    <label for = "password_confirm"> Password Confirmation:  </label>
    <%= f.password_field :password_confirmation, class: "form-control input" %>
  </div>
  <%= f.submit "Submit", class: "btn btn-primary" %>


<% end %>
